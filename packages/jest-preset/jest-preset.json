{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{js,jsx}",
    "!<rootDir>/**/{__mocks__, mocks}/**",
    "!<rootDir>/**/*.{mock,mocks}.js",
    "!<rootDir>/**/{__stories__, stories}/**",
    "!<rootDir>/**/{__tests__, tests}/__snapshots__/**"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 80,
      "branches": 80,
      "lines": 80,
      "functions": 80
    }
  },
  "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
  ],
  "testRegex": [
    "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "(/tests?/.*|(\\.|/)(test|spec))\\.[jt]sx?$"
  ],
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "transformIgnorePatterns": [
     "<rootDir>/node_modules/"
  ]
}
