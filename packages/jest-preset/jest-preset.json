{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{js,jsx}",
    "!<rootDir>/**/{__mocks__, mocks}/**",
    "!<rootDir>/**/*.{mocks,mock}.js",
    "!<rootDir>/**/{__stories__,stories,story}/**",
    "!<rootDir>/**/{__tests__,tests,test}/__snapshots__/**"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 80,
      "branches": 80,
      "lines": 80,
      "functions": 80
    }
  },
  "displayName": "Unit Tests",
  "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
  ],
  "testRegex": [
    "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "(/tests?/.*|(\\.|/)(test|spec))\\.[jt]sx?$"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/**/*.{mocks,mock}.js",
    "<rootDir>/**/coverage/"
  ],
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "transformIgnorePatterns": [
     "<rootDir>/node_modules/"
  ]
}
